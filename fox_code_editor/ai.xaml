<Window x:Class="fox_code_editor.ai"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fox_code_editor"
        mc:Ignorable="d"
        Title="ai" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock x:Name="output"></TextBlock>
        </Grid>

        <Grid Grid.Row="1">
            <TextBox x:Name="input" Text="" FontFamily="メイリオ" FontSize="18" Margin="10,0,114,0" VerticalAlignment="Center"></TextBox>
            <Button Content="送信" Margin="691,10,26,10" x:Name="okuru" Click="okuru_Click"></Button>
        </Grid>
    </Grid>
</Window>
